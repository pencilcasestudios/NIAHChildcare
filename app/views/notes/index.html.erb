<%= render "background" %>

<div class="row">
  <div class="four columns">
    <section class="header">
      <header>
        <h1><%= title t("views.notes.index.title") %></h1>
      </header>
    </section>
  </div><!-- /.three .columns -->
  <div class="eight columns">
    <section class="content">

      <p class="right">
        <% if @noteable.is_a?(FamilyProfile) %>
          <%= link_to t("views.notes.index.links.back_to_family_profile", family: @noteable.user.full_name), @noteable %>
        <% end %>

        <% if @noteable.is_a?(NannyPortrait) %>
          <%= link_to t("views.notes.index.links.back_to_nanny_portrait", nanny_portrait: @noteable.family_profile.user.full_name), @noteable %>
        <% end %>

        <% if @noteable.is_a?(NannyProfile) %>
          <%= link_to t("views.notes.index.links.back_to_nanny_profile", nanny_profile: @noteable.user.full_name), @noteable %>
        <% end %>
      </p>

      <hr />

      <% if @noteable.is_a?(FamilyProfile) %>
        <h2><%= t("views.notes.index.headings.family_profile", family: @noteable.user.full_name) %></h2>
      <% end %>

      <% if @noteable.is_a?(NannyPortrait) %>
        <h2><%= t("views.notes.index.headings.nanny_portrait", family: @noteable.family_profile.user.full_name) %></h2>
      <% end %>

      <% if @noteable.is_a?(NannyProfile) %>
        <h2><%= t("views.notes.index.headings.nanny_portrait", nanny: @noteable.user.full_name) %></h2>
      <% end %>

      <%= render "form" %>

      <hr />

      <%= render @notes %>
    </section><!-- /.content -->
 </div><!-- /.nine .columns -->
</div><!-- /.row -->
