<%= nested_form_for(@family_profile) do |f| %>
  <%= render "errors", family_profile: @family_profile %>

  <fieldset>
    <legend><%= t("views.family_profiles._form.legends.guardians") %></legend>
    <%= f.fields_for :guardians %>
    <p class="add_field"><%= f.link_to_add t("views.family_profiles._form.links.add_a_guardian"), :guardians %></p>
  </fieldset>

  <fieldset>
    <legend><%= t("views.family_profiles._form.legends.address") %></legend>
    <%= f.fields_for :addresses %>
    <!--
    <p class="add_field"><%= f.link_to_add t("views.family_profiles._form.links.add_an_address"), :addresses %></p>
    -->
  </fieldset>

  <fieldset>
    <legend><%= t("views.family_profiles._form.legends.children") %></legend>
    <%= f.fields_for :children %>
    <p class="add_field"><%= f.link_to_add t("views.family_profiles._form.links.add_a_child"), :children %></p>
  </fieldset>

  <fieldset>
    <legend><%= t("views.family_profiles._form.legends.pets_description") %></legend>
    <%= f.label :pets_description, t("views.family_profiles._form.labels.pets_description") %>
    <%= f.text_area :pets_description, rows: 8 %>
  </fieldset>

  <fieldset>
    <legend><%= t("views.family_profiles._form.legends.interests_description") %></legend>
    <%= f.label :interests_description, t("views.family_profiles._form.labels.interests_description_html") %>
    <%= f.text_area :interests_description, rows: 8 %>
  </fieldset>

  <fieldset>
    <p><%= t("views.family_profiles._form.copy.references") %></p>
    <legend><%= t("views.family_profiles._form.legends.references") %></legend>
    <%= f.fields_for :references %>
    <p class="add_field"><%= f.link_to_add t("views.family_profiles._form.links.add_a_reference"), :references %></p>

    <hr />

    <%= t("views.family_profiles._form.copy.reference_check_html") %>
  </fieldset>

  <fieldset>
    <legend><%= t("views.family_profiles._form.legends.statement_of_truth") %></legend>

    <p>
      <%= t("views.family_profiles._form.copy.statement_of_truth_html") %>
      (<%= f.check_box :statement_of_truth %>)
    </p>

    <p><%= link_to t("views.family_profiles._form.copy.terms_of_use"), terms_path %><%= t("views.application.copy.full_stop") %><p>
  </fieldset>

  <%= f.submit class: "button" %>
<% end %>
