html {
  /* Force the vertical scrollbar */
  overflow-y: scroll;
}

@font-face {
  font-family: "Just Me Again Down Here";
  src: url("<%= asset_path("Just_Me_Again_Down_Here/Just_Me_Again_Down_Here.ttf") %>");
  font-weight: normal;
  font-style: normal;
}

header h1 {
  font-family: "Just Me Again Down Here", Georgia, "Times New Roman", Times, serif;
  color: #f2da3f;
  font-size: 5em;
  line-height: 1em;
  text-shadow: 0px 2px 2px #222222;
}

fieldset legend {
  background: transparent;
  padding: 0.5em;
}

form .hint {
  font-size: 0.85em;
  line-height: 1.3em;
  padding: 0 0.75em 0.75em 0.75em;
  color: #666666;
}

nav dl {
  background: #ffffff;
  padding: 0.5em;
}

section {
  margin-top: 2em;
}

section#header_logo {
  text-align: center;
}

section header {
  padding: 2em;
  text-align: right;
}

section header h1 {
  color: #e9d66b;
  text-shadow: 0px 3px 3px #333333;
}

section.content {
  background: rgba(255, 255, 255, 0.9);
  min-height: 300px;
  padding: 2em;
}

section .heading p,
section p strong.heading {
  color: #999999;
  font-weight: bold;
  text-align: right;
}

footer {
  background: #950908;
  color: #e9d66b;
  margin-top: 3em;
  padding: 0.5em;
  position: relative;
  text-align: center;
  z-index: 1;
}

footer .credits {
  font-size: 0.75em;
  line-height: 1.5em;
}

#navigation_pane {
  background: rgba(0, 0, 0, 0.6);
}

#user_links {
  color: #eeeeee;
  padding: 1em 1em 0 1em;
  text-align: right;
}

#user_links a {
  color: #e9d66b;
}

#user_links a:hover {
  text-decoration: underline;
}

.remove_field {
  font-size: 0.85em;
  line-heigh: 1.3em;
  text-align: right;
}

.right {
  text-align: right;
}

.translation_missing {
  background: #ff0000;
}

.simple_captcha_image {
  padding: 0.5em;
  text-align: center;
}
